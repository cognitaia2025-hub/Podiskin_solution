# ============================================================================
# CONFIGURACIÓN DE AUTENTICACIÓN
# ============================================================================

# Clave secreta para firmar JWT tokens (CAMBIAR EN PRODUCCIÓN)
# Generar con: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-secret-key-change-in-production-PLEASE

# ============================================================================
# BASE DE DATOS
# ============================================================================

# URL de conexión a PostgreSQL
# Formato: postgresql://usuario:password@host:puerto/database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/podoskin_db

# ============================================================================
# GEMINI AI (Para otros módulos)
# ============================================================================

GEMINI_API_KEY=tu_api_key_aqui
GEMINI_MODEL=gemini-2.0-flash-exp

# ============================================================================
# ANTHROPIC (Para sub-agentes)
# ============================================================================

ANTHROPIC_API_KEY=tu_api_key_aqui

# ============================================================================
# CONFIGURACIÓN DEL SERVIDOR
# ============================================================================

# Puerto del servidor
PORT=8000

# Modo de desarrollo
DEBUG=true

# Allowed origins para CORS (separados por coma)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ============================================================================
# ALMACENAMIENTO (Opcional)
# ============================================================================

STORAGE_BUCKET=podoskin-recordings
STORAGE_REGION=us-central1
