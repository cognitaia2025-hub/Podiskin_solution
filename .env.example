# ============================================================================
# PODOSKIN SOLUTION - VARIABLES DE ENTORNO
# ============================================================================
# Copiar este archivo a .env y configurar con valores reales
# NO COMMITEAR el archivo .env con valores reales

# ============================================================================
# ENTORNO
# ============================================================================
ENV=development  # development | production
LOG_LEVEL=DEBUG  # DEBUG | INFO | WARNING | ERROR

# ============================================================================
# BASE DE DATOS POSTGRESQL
# ============================================================================
DB_HOST=127.0.0.1
DB_PORT=5432
DB_NAME=podoskin_db
DB_USER=podoskin_user
DB_PASSWORD=CAMBIAR_EN_PRODUCCION  # ⚠️ REQUERIDO: Cambiar contraseña segura

# ============================================================================
# AUTENTICACIÓN JWT
# ============================================================================
SECRET_KEY=CAMBIAR_CLAVE_SECRETA_LARGA_Y_SEGURA  # ⚠️ REQUERIDO: Mínimo 32 caracteres
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================================================
# ANTHROPIC (Claude AI)
# ============================================================================
ANTHROPIC_API_KEY=sk-ant-api03-XXXXXXXX  # ⚠️ REQUERIDO para agentes IA

# ============================================================================
# TWILIO (WhatsApp)
# ============================================================================
TWILIO_ACCOUNT_SID=ACXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX  # ⚠️ REQUERIDO en producción
TWILIO_AUTH_TOKEN=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX  # ⚠️ REQUERIDO en producción
TWILIO_PHONE_NUMBER=whatsapp:+14155238886  # Número de WhatsApp de Twilio

# ============================================================================
# LANGSMITH (Monitoring - Opcional)
# ============================================================================
LANGCHAIN_TRACING_V2=true  # true | false
LANGCHAIN_PROJECT=podoskin-solution
LANGSMITH_API_KEY=lsv2_pt_XXXXXXXXXXXXXXXXXXXXXXXX  # Opcional

# ============================================================================
# CONFIGURACIÓN DE APLICACIÓN
# ============================================================================
BACKEND_PORT=8000
FRONTEND_URL=http://localhost:5173

# CORS Origins (separados por coma)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================================================
# CONFIGURACIÓN AVANZADA (Opcional)
# ============================================================================
# Database Pool
DB_POOL_MIN_SIZE=5
DB_POOL_MAX_SIZE=20
DB_COMMAND_TIMEOUT=60

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# ============================================================================
# NOTAS DE SEGURIDAD
# ============================================================================
# 1. NUNCA commitear este archivo con valores reales
# 2. Usar contraseñas fuertes (mínimo 16 caracteres, con mayúsculas, minúsculas, números y símbolos)
# 3. Rotar claves regularmente en producción
# 4. Usar servicios de gestión de secretos en producción (AWS Secrets Manager, Azure Key Vault, etc.)
# 5. Habilitar SSL/TLS en base de datos en producción
